<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %> 
  <body>
    <%- include('../partials/navbar') %> 
    
    <!-- Main -->
    <main id="main">

      <div class="container">
            
            <div id="signup-box">

              <div class="left">
                <h1>Sign Up</h1>

                <input type="text" name="username" placeholder="First name" />
                <input type="text" name="password" placeholder="Last name" />
                <input type="email" name="username" placeholder="Email" />
                <input type="file" name="image-profile" placeholder="Image profile" />
                <input type="password" name="password" placeholder="Password" />
                <input type="password" name="password" placeholder="Retype Password" />
                <input type="submit" name="signup_submit" value="Sign Up" />
                <a href="#"><p>Forgot your password?</p></a>
                <a href="login"  class="have-account"><p>Have account? <span>Log In</span></p></a>
                
              </div>
              
              <div class="right">              
                <span class="loginwith">Register with<br />Social Network</span>
                
                <button class="social-signin facebook">Sign up with facebook</button>
                <button class="social-signin twitter">Sign up with Twitter</button>
                <button class="social-signin google">Sign up with Google+</button>
              </div>

              <div class="or">OR</div>
            </div>
      </div>
      
      <%- include('../partials/sections/facility_section') %>  
     
    </main>
    <!-- End Main -->

    <%- include('../partials/sections/newsletter_section') %> 
    <%- include('../partials/footer') %>

    <!-- Go To -->
    <a href="#header" class="goto-top scroll-link">
      <svg>
        <use xlink:href="./images/sprite.svg#icon-arrow-up"></use>
      </svg>
    </a>
    <!-- End Go To -->

    <!-- Glide Carousel Script -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Glide.js/3.4.1/glide.min.js"></script>
    <!-- Animate On Scroll -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <!-- Custom JavaScript -->
    <script src="/javascripts/products.js"></script>
    <script src="/javascripts/index.js"></script>
    <script src="/javascripts/slider.js"></script>
  </body>
</html>